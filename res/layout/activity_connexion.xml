<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="0dp"
    tools:context=".ConnexionActivity" >
    
    <LinearLayout
        android:id="@+id/l1"
        style="@style/TitleBar"
        android:layout_alignParentTop="true"
        	android:layout_centerHorizontal="true"
        android:layout_width="match_parent" >

        <TextView
            style="@style/TitleBarText"
            android:text="@string/title_activity_connexion" />

        <ImageView style="@style/TitleBarSeparator" />

        <ImageButton
            style="@style/TitleBarAction"
            android:contentDescription="@string/description_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onClickHome"
            android:src="@drawable/update" />
    </LinearLayout>
    
     <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/l1"
        android:orientation="vertical" >
        
    <LinearLayout
        android:id="@+id/l2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/l1" >

        <ImageView
            android:id="@+id/logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="40dp"
            android:src="@drawable/logo" />
    </LinearLayout>
    
    
     <LinearLayout android:id="@+id/l6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
         android:layout_below="@+id/l2">
        
      <EditText
        android:id="@+id/login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_margin="5px"
        android:text="vendeur"
        android:hint="@string/login"
        android:inputType="text"  >

        <requestFocus />
    </EditText>
    </LinearLayout>
    
    <LinearLayout
        android:id="@+id/l3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/l6" >

        <EditText
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5px"
            android:layout_marginRight="5px"
            android:ems="10"
            android:hint="@string/password"
            android:inputType="textPassword"
            android:text="1234"  >

        <requestFocus />
    </EditText>

    </LinearLayout>
    
    <LinearLayout android:id="@+id/l5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
         android:layout_below="@+id/l3">
        
       <CheckBox
        android:id="@+id/souvenir"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/action_save" />
    </LinearLayout>
    
     </LinearLayout>
    <LinearLayout
        android:id="@+id/l4"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal"
        android:layout_marginBottom="5dp" >
       
       <Button
            android:id="@+id/connecter"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_margin="5px"
            android:background="@drawable/mybuttontop"
            android:text="@string/connexion"
            android:textColor="@android:color/white" />

    </LinearLayout>
    
</RelativeLayout>